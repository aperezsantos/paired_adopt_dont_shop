<h1><%= @pet.name %></h1>
<%= image_tag("#{@pet.image}", :size => "260x180") %><br>
<p>Name: <%= @pet.name %></p>
<p>Age: <%= @pet.age %></p>
<p>Sex: <%= @pet.sex %></p>
<p>Description: <%= @pet.description %></p>
<p>Status: <%= @pet.adoption_status %></p>

<%if favorites.favorite_status(@pet.id) == true%>
  <%= link_to 'Remove from Favorites', "/favorites/#{@pet.id}", method: :delete %><br><br>
<%else%>
  <%= link_to 'Add to Favorites', "/favorites/#{@pet.id}", method: :patch %><br><br>
<%end%>

<%= link_to 'Delete Pet', "/pets/#{params[:id]}", method: :delete %><br>
<%= link_to 'Update Pet', "/pets/#{params[:id]}/edit"%><br>
