<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>
    <p><%= link_to "Favorites: #{favorites.total_count}", "/favorites" %></p>
    <%= link_to "All Pets", "/pets" %><br>
    <%= link_to "All Shelters", "/shelters" %><br>
    <%= yield %>
  </body>
</html>
